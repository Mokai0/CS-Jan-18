@model MVCtake2.Models.Game

@{
    Layout = "~/Views/Shared/_LayoutPage.cshtml";
    ViewBag.Title = Model.DisplayText;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title></title>
</head>
<body>
    <div>
        <h1>@Model.Title</h1>
        <h2>@Model.Genre</h2>
        <h3>@Html.Raw(Model.Description)</h3>

        @if (Model.Developers.Length > 0)
        {
            <h4>Made by:</h4>
            <ul>
                @foreach (var thing in Model.Developers)
                {
                    <li>@thing</li>
                }
            </ul>
        }
    </div>
</body>
</html>
